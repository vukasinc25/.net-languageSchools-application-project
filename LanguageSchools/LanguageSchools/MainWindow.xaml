<Window x:Class="LanguageSchools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanguageSchools"
        mc:Ignorable="d"
        Title="Language Schools" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="65"></Setter>
            <Setter Property="Height" Value="25"></Setter>
            <Setter Property="Margin" Value="7"></Setter>
        </Style>
    </Window.Resources>
    <DockPanel>
        <WrapPanel 
            DockPanel.Dock="Top"
            HorizontalAlignment="Left">
            <!--<Button>Login</Button>
            <Button>Register</Button>-->
        </WrapPanel>
        <Grid>
            <TabControl HorizontalAlignment="Stretch">
                <TabItem Name="TiClasses" Header="Classes">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="119*"/>
                            <ColumnDefinition Width="676*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <DataGrid Grid.Row="0"
                                              CanUserAddRows="False"
                                              IsReadOnly="True"
                                              Name="DgClasses"
                                              AutoGeneratingColumn="DgClasses_AutoGeneratingColumn" Margin="0,0,0,91" Grid.RowSpan="3" Grid.ColumnSpan="2">
                        </DataGrid>

                        <WrapPanel Grid.Row="2"
                                               HorizontalAlignment="Right" Margin="0,21,10,70" Grid.RowSpan="2" Grid.Column="1">
                            <Button Name="BtnAddClasses" 
                                            Click="BtnAddClasses_Click">Add</Button>
                            <Button Name="BtnEditClasses" 
                                            Click="BtnEditClasses_Click">Edit</Button>
                            <Button Name="BtnDeleteClasses" 
                                            Click="BtnDeleteClasses_Click">Delete</Button>
                        </WrapPanel>
                    </Grid>
                </TabItem>
                <!--<TabItem Name="TiSchools" Header="Schools">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <GroupBox Grid.Column="0" Header="Schools:" Margin="10,10,10,183" Grid.ColumnSpan="2" >

                        </GroupBox>
                        <GroupBox Header="Professors in them:" Grid.ColumnSpan="2" Margin="10,189,10,10" />
                    </Grid>
                </TabItem>-->
                <TabItem Name="TiProfessors" Header="Professors">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <DataGrid Grid.Row="0"
                                              CanUserAddRows="False"
                                              IsReadOnly="True"
                                              Name="DgProfessors"
                                              AutoGeneratingColumn="DgProfessors_AutoGeneratingColumn" Margin="0,0,0,91" Grid.RowSpan="3">
                        </DataGrid>

                        <WrapPanel Grid.Row="2"
                                               HorizontalAlignment="Right" Margin="0,21,10,70" Grid.RowSpan="2">
                            <Button Name="BtnAddProfessors" 
                                            Click="BtnAddProfessors_Click">Add</Button>
                            <Button Name="BtnEditProfessor" 
                                            Click="BtnEditProfessor_Click">Edit</Button>
                            <Button Name="BtnDeleteProfessor" 
                                            Click="BtnDeleteProfessor_Click">Delete</Button>
                        </WrapPanel>
                    </Grid>
                </TabItem>
                <TabItem Name="TiStudents" Header="Students">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <DataGrid Grid.Row="0"
                                              CanUserAddRows="False"
                                              IsReadOnly="True"
                                              Name="DgStudents"
                                              AutoGeneratingColumn="DgStudents_AutoGeneratingColumn" Margin="0,0,0,91" Grid.RowSpan="3">
                        </DataGrid>
                        <WrapPanel Grid.Row="2"
                                               HorizontalAlignment="Right" Margin="0,21,10,70" Grid.RowSpan="2">
                            <Button Name="BtnAddStudent" 
                                            Click="BtnAddStudent_Click">Add</Button>
                            <Button Name="BtnEditStudent" 
                                            Click="BtnEditStudent_Click">Edit</Button>
                            <Button Name="BtnDeleteStudent" 
                                            Click="BtnDeleteStudent_Click">Delete</Button>
                        </WrapPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
