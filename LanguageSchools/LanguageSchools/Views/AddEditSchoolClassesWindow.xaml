<Window x:Class="LanguageSchools.Views.AddEditSchoolClassesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanguageSchools.Views"
        mc:Ignorable="d"
        Title="School Class" Height="500" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"></ColumnDefinition>
            <ColumnDefinition Width="76*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="37*"></RowDefinition>
            <RowDefinition Height="37*"></RowDefinition>
            <RowDefinition Height="37*"></RowDefinition>
            <RowDefinition Height="37*"></RowDefinition>
            <RowDefinition Height="37*"></RowDefinition>
            <RowDefinition Height="37*"></RowDefinition>
            <RowDefinition Height="234*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0" 
               Name="lblName" 
               Content="Name:"
               HorizontalAlignment="Right" Width="41"></Label>

        <TextBox Grid.Column="1"
                 Grid.Row="0"
                 Name="txtName"
                 Margin="5,5,5,5"
                 Text="{Binding Path =Name}"></TextBox>

        <Label Grid.Column="0" 
               Name="lblDate" 
               Content="Date Of Class:"
               HorizontalAlignment="Left" Width="95" Grid.ColumnSpan="2" Margin="10,39,0,39" Grid.RowSpan="3"/>

        <DatePicker Grid.Column="1"
                 Grid.Row="1"
                 Name="txtDate"
                 Margin="5,5,5,5" SelectedDate="{Binding Path=Date}"></DatePicker>

        <Label Grid.Column="0" Grid.Row="2" 
               Name="lblStartTime" 
               Content="Start Time:"
               HorizontalAlignment="Right" Width="67"></Label>

        <TextBox Grid.Column="1"
                 Grid.Row="2"
                 Name="txtFirstName"
                 Margin="5,5,5,5"
                 Text="{Binding Path=StartTime}"></TextBox>

        <Label Grid.Column="0" Grid.Row="3" 
               Name="lblDuration" 
               Content="Duration:"
               HorizontalAlignment="Right" Width="66"></Label>

        <TextBox Grid.Column="1"
                 Grid.Row="3"
                 Name="txtDuration"
                 Margin="5,5,5,5"
                 Text="{Binding Path=Duration}"></TextBox>

        <Label Grid.Column="0" Grid.Row="4" 
               Name="lblState" 
               Content="State:"
               HorizontalAlignment="Right" Width="43"></Label>

        <ComboBox Grid.Column="1" Grid.Row="4" Name="cbState" Margin="5,5,5,5"  Text="{Binding Path=State}">
            <ComboBoxItem Content="AVAILABLE"></ComboBoxItem>
            <ComboBoxItem Content="RESERVED"></ComboBoxItem>
        </ComboBox>

        <Button Name="btnSave"
                Grid.Column="1"
                Grid.Row="6"
                Height="35"
                Width="65"
                Margin="117,149,122,35"
                Click="btnSave_Click">Save</Button>
        <Button Name="btnCancel"
                Grid.Column="1"
                Grid.Row="6"
                Height="35"
                Width="65"
                Margin="222,149,17,35"
                Click="btnCancel_Click">Cancel</Button>
    </Grid>
</Window>
